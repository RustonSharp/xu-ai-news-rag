# 应用配置
APP_NAME=xu-ai-news-rag
APP_VERSION=0.0.0
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=5000

# 数据库配置
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/ai_news_rag.db

# FAISS向量数据库配置
FAISS_INDEX_PATH=./data/index.faiss

# 日志配置
LOGGING_LEVEL=INFO
LOGGING_CONSOLE_ENABLED=true
LOGGING_CONSOLE_FORMAT="<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>"
LOGGING_FILE_ENABLED=true
LOGGING_FILE_PATH=./logs/app.log
LOGGING_FILE_ROTATION=500 MB
LOGGING_FILE_RETENTION=30 days
LOGGING_FILE_COMPRESSION=zip
LOGGING_FILE_FORMAT="{time:YYYY-MM-DD HH:mm:ss} | {level: <8} | {name}:{function}:{line} - {message}"
LOGGING_ERROR_FILE_ENABLED=true
LOGGING_ERROR_FILE_PATH=./logs/error.log
LOGGING_ERROR_FILE_LEVEL=ERROR
LOGGING_ERROR_FILE_ROTATION=100 MB
LOGGING_ERROR_FILE_RETENTION=60 days
LOGGING_ERROR_FILE_COMPRESSION=zip
LOGGING_ERROR_FILE_FORMAT="{time:YYYY-MM-DD HH:mm:ss} | {level: <8} | {name}:{function}:{line} - {message} | {extra}"

# 模型配置
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
RERANK_MODEL_NAME=ms-marco-MiniLM-L-6-v2
OLLAMA_MODEL_NAME=qwen2.5:3b
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=60